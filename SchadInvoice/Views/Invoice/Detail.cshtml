@model SchadInvoice.Models.Request.InvoiceRequest;

<div class="container">
    <div class="mt-4 row g-3">
        <div class="mb-1 col-md-12">
            <h3><strong>Información factura</strong></h3>
            <hr class="border border-primary border-3 opacity-75">
        </div>
        <div class="mb-1 col-md-4">
            <h3>Nombre del Cliente</h3>
            <h4><strong>@Model.Invoice.CustomerName</strong></h4>
        </div>
        <div class="mb-1 col-md-4">
            <h3>Total Itbis</h3>
            <h4><strong>@Model.Invoice.TotalItbis</strong></h4>
        </div>
        <div class="mb-1 col-md-4">
            <h3>Sub Total</h3>
            <h4><strong>@Model.Invoice.SubTotal</strong></h4>
        </div>
        <div class="mb-1 col-md-4">
            <h3>Total</h3>
            <h4><strong>@Model.Invoice.Total</strong></h4>
        </div>

        <div class="mt-3 mb-2 col-md-12">
            <h3><<strong>>Información detalle de factura</strong></h3>
            <hr class="border border-secondary border-3 opacity-75">
        </div>

        <div class="mb-1 col-md-4">
            <h3>Precio</h3>
            <h4><strong>@Model.InvoiceDetail.Price</strong></h4>
        </div>
        <div class="mb-1 col-md-4">
            <h3>Cantidad</h3>
            <h4><strong>@Model.InvoiceDetail.Qty</strong></h4>
        </div>
    </div>
</div>